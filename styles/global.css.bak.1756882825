
/* === Right rail event card background === */
.rightRail .rrCard:nth-child(2){
  position: relative;
  overflow: hidden;
}
.rightRail .rrCard:nth-child(2) img.eventFlyer{
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: grayscale(100%) brightness(1.1) contrast(0.8);
  opacity: .18;
  z-index: 0;
  pointer-events: none;
}
.rightRail .rrCard:nth-child(2) > *{
  position: relative;
  z-index: 1;
}
.evtWrap{ position: relative; }
.evtTitle{ font-weight: 700; margin: 6px 0 4px; }
.evtWhenWhere{ font-size: 14px; margin-bottom: 8px; }
.evtDesc{ margin: 8px 0 10px; }
.evtContact a{ color: #3b0bbb; text-decoration: none; }
.evtContact a:hover{ text-decoration: underline; }

/* Optional polaroid placeholders so the first/third cards still look okay */
.rrCard.polaroid .polaroidPhoto{
  width: 100%;
  height: 150px;
  border-radius: 12px;
  background: #eee;
}
.rrCard.polaroid .polaroidCaption{
  margin-top: 8px;
  font-style: italic;
  text-align: center;
}
