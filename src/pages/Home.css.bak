/* ===== HOME PAGE ===== */

.home-wrap {
  padding-block: 8px 0;
}

.home-hero {
  text-align: left;
  margin: 0 0 8px;
}

.home-hero h1 {
  margin: 0 0 6px;
  font-size: clamp(28px, 2.6vw, 36px);
}

.home-hero p {
  margin: 0;
  opacity: .85;
}

/* Current Volume card */
.volumeCard {
  border-radius: 16px;
  background: #fff;
  box-shadow: 0 12px 28px rgba(30, 10, 60, 0.12), 0 2px 8px rgba(30, 10, 60, 0.06);
  margin: 10px 0 0;
  padding: 18px 20px;
}

.volumeStack {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10px;
}

.volumeStack--centered {
  align-items: center;
}

.volTitle {
  font-family: "Press Start 2P", system-ui, sans-serif;
  letter-spacing: 1px;
  margin: 0;
  text-align: center;
}

.date {
  margin: 4px 0 8px;
  font-size: clamp(13px, 1.2vw, 14px);
  opacity: .8;
  text-align: center;
}

/* Cover + sticker */
.coverWrap {
  overflow: visible;
  position: relative;
  border-radius: 14px;
  
  width: clamp(220px, 28vw, 360px);
  aspect-ratio: 3 / 4; /* keeps height proportional without stretching */
  box-shadow: 0 10px 26px rgba(0,0,0,.12), 0 2px 8px rgba(0,0,0,.08);
}

.volumeCover {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* gel gloss */
/* sticker "pin" with slight gel & shadow */
.stickerPin{
  position:absolute;
  top: -10px;
  left: 50%;
  transform: translate(-50%,-35%) rotate(-10deg);
  width: clamp(44px, 7vw, 64px);
  filter:
    drop-shadow(0 6px 10px rgba(0,0,0,.18))
    drop-shadow(0 1px 2px rgba(0,0,0,.12));
  user-select:none;
  pointer-events:none;
}

/* blurb */
.blurbList{
  width: min(680px, 88%);
  margin: 8px auto 0;
  padding-left: 1.2rem;
  font-size: clamp(14px, 1.25vw, 16px);
  line-height: 1.45;
  list-style: disc;
}

/* read button */
.readRow{
  margin-top: 10px;
  display:flex;
  justify-content:center;
}

.readBtn{
  display:inline-flex;
  align-items:center;
  justify-content:center;
  padding: 10px 26px;
  border-radius: 999px;
  font-family: "Press Start 2P", system-ui, sans-serif;
  font-size: 14px;
  text-decoration:none;
  color:#fff;
  background: linear-gradient(135deg, #ff6ad5, #7aa2ff);
  box-shadow: 0 10px 24px rgba(122,162,255,.28), inset 0 2px 0 rgba(255,255,255,.45);
  transition: transform .15s ease, box-shadow .15s ease, filter .15s ease;
}

.readBtn:hover{
  transform: translateY(-1px);
  box-shadow: 0 16px 28px rgba(122,162,255,.34), inset 0 2px 0 rgba(255,255,255,.55);
  filter: saturate(1.08);
}

/* -------- Height-aware compaction (desktop <=1080px tall) -------- */
@media (min-width: 900px) and (max-height: 1080px){
  .home-hero { margin-bottom: 4px; }
  .volumeCard { padding: 14px 16px; }
  .coverWrap { width: clamp(220px, 24vw, 320px); }
  .blurbList { width: min(620px, 86%); }
  .readRow { margin-top: 8px; }
}

/* Extra tight guard if needed around 900â€“1080h */
@media (min-width: 900px) and (max-height: 1000px){
  .coverWrap { width: clamp(220px, 22vw, 300px); }
  .blurbList { font-size: clamp(13px, 1.05vw, 15px); }
}
/* BEGIN: STICKER-GLOSS */
/* Sticker wrapper (positions + scales the sticker; holds the gloss) */
.stickerWrap{
  position:absolute;
  top: -10px;
  left: 50%;
  transform: translate(-50%,-35%) rotate(-10deg);
  width: clamp(44px, 7vw, 64px);
  user-select:none;
  pointer-events:none;
  /* subtle, layered shadow for a pinned look */
  filter:
    drop-shadow(0 6px 10px rgba(0,0,0,.18))
    drop-shadow(0 1px 2px rgba(0,0,0,.12));
}

/* Sticker image fills the wrapper */
.stickerPin{
  display:block;
  width: 100%;
  height: auto;
}

/* Gloss lives on the sticker (not the cover) */
.stickerGloss{
  position:absolute;
  inset:0;
  pointer-events:none;
  border-radius: 10%;
  mix-blend-mode: screen;
  opacity: .9;
  background:
    /* big soft bubble highlight */
    radial-gradient(60% 60% at 35% 28%, rgba(255,255,255,.65) 0 35%, rgba(255,255,255,0) 60%),
    /* tighter specular spot */
    radial-gradient(18% 18% at 70% 35%, rgba(255,255,255,.85) 0 35%, rgba(255,255,255,0) 60%),
    /* faint lower sheen */
    radial-gradient(70% 70% at 20% 80%, rgba(255,255,255,.20) 0 40%, rgba(255,255,255,0) 65%);
}

/* Responsive tweak for small screens */
@media (max-width: 700px){
  .stickerWrap{
    top: clamp(-14px, -4vw, -8px);
    transform: translate(-50%,-40%) rotate(-10deg);
  }
}
/* END: STICKER-GLOSS */

/* === Sticker: larger + above everything without resizing the card === */
/* Make sure the element that contains the sticker allows overflow.
   One of these selectors should match in your layout; the others are harmless. */
.currentVolume, .volumeCard, .coverWrap { 
  position: relative; 
  overflow: visible; 
}

/* Sticker wrapper (anchors + lifts the sticker visually) */
.stickerWrap{
  position: absolute;
  top: -22px;                               /* pull the sticker above the cover */
  left: 50%;
  transform: translate(-50%, -70%) rotate(-10deg);
  width: clamp(64px, 9vw, 96px);            /* bigger but still responsive */
  z-index: 30;                              /* keep it above all card content */
  user-select: none;
  pointer-events: none;
  filter:
    drop-shadow(0 10px 14px rgba(0,0,0,.22))
    drop-shadow(0 2px 4px rgba(0,0,0,.14));
}

/* Sticker image itself fills the wrapper */
.stickerPin{
  display: block;
  width: 100%;
  height: auto;
}

/* Gloss that lives on the sticker (not the cover) */
.stickerGloss{
  position: absolute;
  inset: 0;
  border-radius: 10%;
  pointer-events: none;
  mix-blend-mode: screen;
  opacity: .9;
  background:
    radial-gradient(60% 60% at 35% 28%, rgba(255,255,255,.65) 0 35%, rgba(255,255,255,0) 60%),
    radial-gradient(18% 18% at 70% 35%, rgba(255,255,255,.85) 0 35%, rgba(255,255,255,0) 60%),
    radial-gradient(70% 70% at 20% 80%, rgba(255,255,255,.20) 0 40%, rgba(255,255,255,0) 65%);
}

/* Mobile tweak to avoid crowding */
@media (max-width: 700px){
  .stickerWrap{
    top: clamp(-26px, -6vw, -14px);
    transform: translate(-50%, -80%) rotate(-10deg);
    width: clamp(56px, 10vw, 84px);
  }
}

